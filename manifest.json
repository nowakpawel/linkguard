{
  "manifest_version": 3,
  "name": "LinkGuard",
  "version": "0.1.0",
  "description": "Privacy-first browser extension that checks link safety before you click. Open-source, zero tracking, sub-100ms response time.",
  "author": "Pawel Nowak (nowakpwel)",
  "homepage_url": "https://linkguard.dev",
  
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    },
    "default_title": "LinkGuard - Check Link Safety"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
